  { icon: 'üèîÔ∏è', label: 'Glaciers', desc: 'Tidewater ice & icefields', url: '/glaciers/' },
  { icon: 'üåå', label: 'Northern Lights', desc: 'Aurora viewing guide', url: '/northern-lights/' },
