    line-height: 1.7;
    font-size: 0.95rem;
    color: var(--color-slate);
  }
  .credential-list li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 10px;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--color-warm-gold), #FBBF24);
  }
  .credential-list li strong {
    color: var(--color-deep-night);
    font-weight: 600;
  }

  /* ===================================================
     COVERAGE AREAS
     =================================================== */
  .coverage-section {
    padding: 80px 24px;
    background: var(--color-sand);
  }
  .coverage-inner {
    max-width: var(--max-width, 1120px);
    margin: 0 auto;
  }
  .coverage-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
  }
  .coverage-card {
    background: var(--color-white);
    border-radius: 16px;
    padding: 28px 24px;
    border: 1px solid transparent;
    transition: all 0.4s cubic-bezier(0.4,0,0.2,1);
  }
  .coverage-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 24px rgba(26,35,50,0.08);
    border-color: var(--color-sand-dark);
  }
  .coverage-icon {
    font-size: 1.5rem;
    margin-bottom: 12px;
  }
  .coverage-title {
    font-family: var(--font-serif);
    font-size: 1.1rem;
    color: var(--color-deep-night);
    margin-bottom: 8px;
  }
  .coverage-desc {
    font-size: 0.82rem;
    color: var(--color-slate);
    line-height: 1.7;
    font-weight: 300;
  }

  /* ===================================================
     CONTENT BY JENICE
     =================================================== */
  .content-section {
    padding: 80px 24px;
    background: var(--color-white);
  }
  .content-inner {
    max-width: var(--max-width, 1120px);
    margin: 0 auto;
  }
  .content-subhead {
    font-family: var(--font-sans);
    font-size: 0.78rem;
    font-weight: 700;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--color-warm-gold);
    margin-bottom: 16px;
  }
  .content-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
    margin-bottom: 40px;
  }
  .content-grid--destinations {
    grid-template-columns: repeat(3, 1fr);
  }
  .content-card {
    display: block;
    background: var(--color-sand);
    border-radius: 12px;
    padding: 20px;
    text-decoration: none;
    color: inherit;
    border: 1px solid transparent;
    transition: all 0.4s cubic-bezier(0.4,0,0.2,1);
  }
  .content-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 4px 20px rgba(26,35,50,0.08);
    border-color: var(--color-warm-gold);
  }
  .content-card-type {
    font-size: 0.62rem;
    font-weight: 700;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--color-warm-coral);
    margin-bottom: 6px;
  }
  .content-card--dest .content-card-type {
    color: var(--color-warm-gold);
  }
  .content-card-title {
    font-family: var(--font-serif);
    font-size: 0.95rem;
    color: var(--color-deep-night);
    line-height: 1.35;
  }
  .content-all-link {
    text-align: center;
    margin-top: 8px;
  }
  .content-all-link a {
    font-size: 0.88rem;
    color: var(--color-warm-gold);
    font-weight: 600;
    text-decoration: none;
    transition: color 0.2s ease;
  }
  .content-all-link a:hover {
    color: #B8935F;
  }

  /* ===================================================
     EMAIL SECTION
     =================================================== */
  .email-section {
    padding: 64px 24px;
    background: var(--color-sand);
  }
  .email-section-inner {
    max-width: 640px;
    margin: 0 auto;
  }

  /* ===================================================
     BACK LINK
     =================================================== */
  .back-section {
    padding: 40px 24px 64px;
    background: var(--color-sand);
  }
  .back-inner {
    max-width: var(--content-lg);
    margin: 0 auto;
    text-align: center;
  }
  .back-link {
    font-size: 0.88rem;
    color: var(--color-warm-gold);
    font-weight: 600;
    text-decoration: none;
    transition: color 0.2s ease;
  }
  .back-link:hover { color: #B8935F; }

  /* ===================================================
     REVEAL ANIMATION
     =================================================== */
  .reveal {
    opacity: 0;
    transform: translateY(28px);
    transition: opacity 0.8s cubic-bezier(0.16,1,0.3,1), transform 0.8s cubic-bezier(0.16,1,0.3,1);
  }
  .reveal.visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* ===================================================
     RESPONSIVE
     =================================================== */
